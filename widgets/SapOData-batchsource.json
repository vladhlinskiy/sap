{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "SAP OData",
  "configuration-groups": [
    {
      "label": "General",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "OData Service URL",
          "name": "url"
        },
        {
          "widget-type": "textbox",
          "label": "Resource Path",
          "name": "resourcePath",
          "plugin-function": {
            "label": "Get Schema",
            "widget": "outputSchema",
            "output-property": "schema",
            "omit-properties": [
              {
                "name": "schema"
              }
            ],
            "add-properties": [
              {
                "name": "query",
                "plugin-property-for-value": "query",
                "widget-type": "textbox",
                "label": "Query"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Query",
          "name": "query"
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        }
      ]
    }
  ],
  "emit-errors": true,
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string",
          "array",
          "record",
          "map",
          "union"
        ],
        "schema-default-type": "string",
        "property-watch": "format"
      }
    }
  ]
}
